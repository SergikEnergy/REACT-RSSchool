{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "vite-plugin-svgr/client", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["./vite.config.ts", ".eslintrc.cjs", "./src", "server.ts", "cypress.config.ts", "./cypress/e2e/*"],
  "exclude": ["node_modules", "cypress/fixtures", "cypress/support"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" }
}
